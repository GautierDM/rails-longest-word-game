<h1>NEW GAME</h1>

<ul class = list-inline>
  <% @letters.each do |letter| %>
    <li class = btn><%= letter %> </li>
  <% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="answer">What is the longest word ?</label>
  <input type="text" class="form-control" name="word" placeholder="try?">
  <input type="submit" class="btn-outline-secondary" value="play">
</form>
